[alias]
	# Show all defined aliases
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\\t=> \\2/' | sort

	# Extremely common aliases
	ci = commit
	br = branch
	co = checkout
	df = diff

	# Find more useful aliases all over the interwebs!

